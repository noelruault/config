## ------------------------- BEGINING OF CUSTOM ZSHRC -------------------------
# start=$(($(date +'%s * 1000 + %-N / 1000000')))
start=$(python3 -c 'from time import time; print(int(round(time() * 1000)))')

# TODO: If/else for checking the OS
source $HOME/.config/zshrc-config/aliases/os/macos/set_path

# Path to your oh-my-zsh installation.
export ZSH="$HOME/.oh-my-zsh"
export ZSH_CUSTOM="$HOME/.oh-my-zsh/custom"

# Set name of the theme to load. Optionally, if you set this to "random"
# it'll load a random theme each time that oh-my-zsh is loaded.
# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
# ZSH_THEME="robbyrussell"  # (default)
ZSH_THEME="spaceship"  # https://github.com/denysdovhan/spaceship-zsh-theme

# ... And give some custom COLOR output with already tested color profiles
# https://github.com/mbadolato/iTerm2-Color-Schemes#installation-instructions
SPACESHIP_BATTERY_SHOW='never'

# IMPORTANT: oh-my-zsh must be installed for making next section work.
# Which would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(
    git
    fzf  # https://github.com/junegunn/fzf#using-homebrew-or-linuxbrew
    docker
    zsh-autosuggestions  # https://github.com/zsh-users/zsh-autosuggestions#oh-my-zsh
    zsh-syntax-highlighting  # https://github.com/zsh-users/zsh-syntax-highlighting
    golang
)
# LOAD oh-my-zsh. This will load all the plugins.
source $ZSH/oh-my-zsh.sh

# Path to your custom configuration.
export ZSH_CUSTOM_CONFIG_FILES="$HOME/.config/zshrc-config"
export ZSH_CUSTOM_CONFIG_ALIASES="$ZSH_CUSTOM_CONFIG_FILES/aliases"

source $ZSH_CUSTOM_CONFIG_ALIASES/default

# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
# To reload .zshrc: 'source .zshrc' or just type 'zsh'

## Useful aliases
source $ZSH_CUSTOM_CONFIG_ALIASES/useful
## Docker useful aliases
source $ZSH_CUSTOM_CONFIG_ALIASES/docker
## Useful macOS aliases
source $ZSH_CUSTOM_CONFIG_ALIASES/os/macos/aliases
## Useful whereis aliases
source $ZSH_CUSTOM_CONFIG_ALIASES/howto
## Useful hacky aliases
source $ZSH_CUSTOM_CONFIG_ALIASES/hacky

## Some aliases to fix zsh history
source $ZSH_CUSTOM_CONFIG_FILES/config/fix_zsh

test -e "$ZSH_CUSTOM_CONFIG_FILES/config/.iterm2_shell_integration.zsh" && \
    source "$ZSH_CUSTOM_CONFIG_FILES/config/.iterm2_shell_integration.zsh"

# end=$(($(date +'%s * 1000 + %-N / 1000000'))); runtime=$((end-start)); echo "Runtime of zshrc was $runtime ms."
end=$(python3 -c 'from time import time; print(int(round(time() * 1000)))'); runtime=$((end-start)); echo "Runtime of zshrc was $runtime ms."
## ------------------------- END OF CUSTOM ZSHRC -------------------------
